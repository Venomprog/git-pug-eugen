block variables
include ../pug/mixins
include ../pug/blocks/header/header
include ../pug/blocks/footer/footer

doctype html
html(lang='ru')
  block head
    head
      meta(charset='utf-8')
      title= pageTitle
      meta(content='width=device-width, initial-scale=1', name='viewport')
      meta(content='ie=edge', http-equiv='x-ua-compatible')
      meta(name='theme-color', content='#4285f4')
      link(href='https://vitejs.dev/logo.svg', rel='icon', type='image/x-icon')
  body
    .wrapper
      block header
        +header
      block content
      block footer
        +footer
    block scripts
      script(type='module', src='../../js/index.js')
